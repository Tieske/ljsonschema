{
  "describe": "utf8 string test cases",
  "test_case": [
    {
      "description": "nil input",
      "error": "bad argument #1: expect 'string', got nil"
    },
    {
      "description": "number input",
      "input": 1,
      "error": "bad argument #1: expect 'string', got number"
    },
    {
      "description": "boolean input",
      "input": true,
      "error": "bad argument #1: expect 'string', got boolean"
    },
    {
      "description": "table input",
      "input": {},
      "error": "bad argument #1: expect 'string', got table"
    },
    {
      "description": "empty string",
      "input": "",
      "expected": 0
    },
    {
      "description": "ascii string",
      "input": "hello",
      "expected": 5
    },
    {
      "description": "utf8 string",
      "input": "你好",
      "expected": 2
    },
    {
      "description": "utf8 string with euro sign",
      "input": "€€€",
      "expected": 3
    },
    {
      "description": "utf8 string with emoji",
      "input": "👍👍👍",
      "expected": 3
    },
    {
      "description": "utf8 string with emoji and euro sign",
      "input": "👍👍👍€€€",
      "expected": 6
    },
    {
      "description": "utf8 string with emoji, euro sign and ascii",
      "input": "👍👍👍€€€hello",
      "expected": 11
    },
    {
      "description": "utf8 string with emoji, euro sign, ascii and control characters",
      "input": "👍👍👍€€€hello\n",
      "expected": 12
    }
  ]
}
